<div class="container">
  <h1>Locations</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= location.name %></td>
          <td><%= link_to "Show", location %></td>
          <td><%= link_to "Edit", edit_location_path(location) %></td>
          <td><%= link_to "Delete", location, method: :delete, data: { confirm: "Are you sure you want to delete this location?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New Location", new_location_path, class: "btn btn-primary" %>
</div>