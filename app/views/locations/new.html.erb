<div class="container">
<h1>New Location</h1>

<%= form_with(model: @location, url: locations_path) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Category", class: "btn btn-primary" %>
  </div>
<% end %>
</div>