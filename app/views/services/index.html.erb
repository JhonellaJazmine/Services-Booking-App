<div class="container">
  <h1>Services</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Location</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= service.description %></td>
          <td><%= service.category.name %></td>
          <td><%= service.location.name %></td>
          <td><%= link_to "Show", service %></td>
          <td><%= link_to "Edit", edit_service_path(service) %></td>
          <td><%= link_to "Delete", service, method: :delete, data: { confirm: "Are you sure you want to delete this service?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New Service", new_service_path, class: "btn btn-primary" %>
</div>
